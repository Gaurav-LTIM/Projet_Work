<core:FragmentDefinition xmlns="sap.m"
                         xmlns:core="sap.ui.core"
                         xmlns:ui="sap.ui.table">
    <Dialog id="idMaterialGroup"
            title="Select Material Group"
            draggable="true"
            resizable="true"
            contentWidth="700px"
            contentHeight="400px"
            afterClose="onValueHelpDialogClose">

        <VBox class="sapUiSmallMargin">
            <SearchField id="materialGroupSearch"
                         placeholder="Search Material Group"
                         liveChange="onSearchMaterialGroup" />

            <ui:Table id="materialGroupTable"
                      rows="{validationService2>/ZMATGRPVH}"
                      visibleRowCount="10"
                      selectionMode="Single"
                      rowSelectionChange="onMaterialGroupSelect">

                <ui:columns>
                    <ui:Column width="10rem">
                        <Label text="Material Group" />
                        <ui:template>
                            <Text text="{validationService2>MATERIALGRP}" />
                        </ui:template>
                    </ui:Column>

                    <ui:Column width="15rem">
                        <Label text="Material Group Description" />
                        <ui:template>
                            <Text text="{validationService2>MaterialGrpDescription}" />
                        </ui:template>
                    </ui:Column>

                    <ui:Column width="10rem">
                        <Label text="Description 2 for the Material group" />
                        <ui:template>
                            <Text text="{validationService2>MaterialGrpDescription2}" />
                        </ui:template>
                    </ui:Column>
                </ui:columns>
            </ui:Table>
        </VBox>

        <endButton>
            <Button text="Cancel" press="onMaterialGroupValueHelpDialogClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
